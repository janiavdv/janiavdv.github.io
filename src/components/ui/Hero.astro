---
import { Image } from "astro:assets";

import SocialIcons from "./SocialIcons.astro";

const { fullName, title, institute, description, profilePicture } = Astro.props;
---

<div class="flex flex-col lg:flex-row items-center gap-8">
  <div class="flex-1">
    <h1 class="text-4xl font-bold mb-4">
      Welcome! I'm <span class="text-secondary">{fullName}</span>
    </h1>
    <p class="text-xl text-gray-600 mb-4">
      {title}{institute ? ` at ${institute}` : ""}
    </p>
    <p class="text-lg mb-6">
      {description}
    </p>
    <div class="flex gap-4">
      <SocialIcons />
    </div>
  </div>
  <div class="size-72 block">
    <Image
      src={profilePicture}
      alt={fullName}
      class="w-full h-full mask mask-circle size-44"
    />
  </div>
</div>
