---
interface Props {
  listTitle: string;
  listItems: {
    title: string;
    description?: string;
    level?: number;
  }[];
}
const { listTitle, listItems } = Astro.props;
---

<h2 class="text-2xl md:text-3xl font-bold mb-4 md:mb-6">{listTitle}</h2>
<div class="grid gap-4 md:gap-6 mb-8 md:mb-12 grid-cols-1">
  {
    listItems.map((item) => (
      <div class="p-4 md:p-6 bg-base-200 rounded-xl text-base-content shadow-sm">
        <h3 class="text-lg md:text-xl font-semibold mb-2 md:mb-3">
          {item.title}
        </h3>
        <p class="text-sm md:text-base">{item.description}</p>
      </div>
    ))
  }
</div>
