---
import Layout from "@/layouts/Layout.astro";
import { projects } from "@/data/resume";

const ALL_PROJECTS = projects;
---

<Layout title="Projects | Jania Vandevoorde">
  <div class="max-w-none">
    <h1 class="text-3xl font-bold mb-8">Technical Projects</h1>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        ALL_PROJECTS.map((project) => (
          <a
            href={project.link}
            class="card bg-base-200 transition-shadow hover:shadow-lg focus:shadow-lg outline-none block hover:bg-base-300"
            style="text-decoration: none;"
            tabindex="0"
          >
            <div class="card-body h-full flex flex-col">
              <h2 class="card-title text-xl mb-2">
              {project.title}
              </h2>
              <p class="flex-1">{project.description}</p>
              <div class="card-actions justify-end mt-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" viewBox="0 0 24 24" aria-label="GitHub" class="text-secondary">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.387.6.113.82-.262.82-.582 0-.288-.01-1.05-.016-2.06-3.338.726-4.042-1.61-4.042-1.61-.546-1.387-1.333-1.756-1.333-1.756-1.09-.745.083-.73.083-.73 1.205.085 1.84 1.237 1.84 1.237 1.07 1.834 2.807 1.304 3.492.997.108-.775.418-1.305.762-1.605-2.665-.304-5.466-1.332-5.466-5.93 0-1.31.468-2.38 1.236-3.22-.124-.303-.535-1.523.117-3.176 0 0 1.008-.322 3.3 1.23a11.5 11.5 0 0 1 3.003-.404c1.02.005 2.047.138 3.003.404 2.29-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.873.12 3.176.77.84 1.235 1.91 1.235 3.22 0 4.61-2.803 5.624-5.475 5.92.43.372.823 1.102.823 2.222 0 1.606-.015 2.898-.015 3.293 0 .322.216.698.825.58C20.565 21.796 24 17.297 24 12c0-6.63-5.37-12-12-12z"/>
              </svg>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
